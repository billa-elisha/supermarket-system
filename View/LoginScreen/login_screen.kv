#:import get_color_from_hex kivy.utils.get_color_from_hex

<LoginScreenView>:
    # properties that are available in the 
    # python file
    user_name:user_name
    user_password:user_password
    user_error_ms:wrong_user_details_error
    user_password:user_password
    user_name:user_name

    md_bg_color: (1,1,1,1)
    name:'login screen'
    # the main container for all the widgets
    MDBoxLayout:
        orientation: 'horizontal'
        # left box for user credentials
        MDBoxLayout:
            orientation: 'vertical'
            padding: "5dp"
            MDFloatLayout:
                md_bg_color: (1,1,1,1) 
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint: (.8,.5)
                    pos_hint: {'x':.1, 'y':.2 }
                    md_bg_color: (1,1,1,1)
                    spacing: '10dp'
                    # text boxlayout
                    MDBoxLayout:
                        orientation: 'vertical'
                        # size_hint_y: None
                        size_hint: (.6,1)
                        pos_hint: {'x':.2 , 'y':0 }
                        spacing: '10dp'
                        MDLabel:
                            text: 'Sign in to ABMS'
                            theme_text_color: 'Custom'
                            text_color:get_color_from_hex("32CD32")
                            adaptive_height: True
                            font_style: "Title"
                            role: "medium"
                            bold:True
                        MDLabel:
                            adaptive_height: True
                            theme_text_color: 'Custom'
                            text_color:get_color_from_hex("5C5C5C")
                            text: 'Manage your business well, bost your profit and have an accurate record of every thing with ABMS.'
                    # fields boxlayout
                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint: (.6,1)
                        pos_hint: {'x':.2 , 'y':0 }
                        # size_hint: (None,None)
                        adaptive_height: True
                        spacing: '20dp'
                        MDLabel:
                            id:wrong_user_details_error
                            text:''
                            theme_text_color: 'Custom'
                            text_color:'red'
                            # adaptive_height: True
                        MDTextField:
                            id:user_name
                            mode:'outlined'
                            multiline: False
                            radius: ['10dp','10dp','10dp','10dp']
                            MDTextFieldHintText:
                                text: "user name"
                                text_color_normal: "gray"
                            MDTextFieldLeadingIcon:
                                icon: 'account'
                                theme_icon_color: "Custom"
                                icon_color_normal: get_color_from_hex("32CD32")
                        MDTextField:
                            id:user_password
                            multiline: False
                            mode:'outlined'
                            password: True
                            radius: ['10dp','10dp','10dp','10dp']
                            MDTextFieldHintText:
                                text: "password"
                                text_color_normal: "gray"
                            MDTextFieldLeadingIcon:
                                icon: 'account'
                                theme_icon_color: "Custom"
                                icon_color_normal: get_color_from_hex("32CD32")
                            MDTextFieldTrailingIcon:
                                id:show_password
                                icon: 'eye-off'
                                theme_icon_color: "Custom"
                                icon_color_normal: get_color_from_hex("32CD32")
                        MDBoxLayout:
                            size_hint:(None,None)
                            adaptive_height: True 
                            spacing: '2dp'
                            MDCheckbox:
                                color_inactive:  get_color_from_hex("5C5C5C")
                                color_active: get_color_from_hex("32CD32")
                                on_press: root.show_hide_password_button_clicked(self,show_password,user_password)
                                # adaptive_height: True
                            MDLabel:
                                text: 'show password'
                                adaptive_width: True 
                                theme_text_color: 'Custom'
                                text_color:  get_color_from_hex("5C5C5C")
                        MDButton:
                            theme_width: "Custom"
                            theme_bg_color: "Custom"
                            md_bg_color:  get_color_from_hex("32CD32")
                            style: "filled"
                            size_hint_x: 1
                            theme_shadow_color: "Custom"
                            shadow_color: "lightgreen"
                            on_press: root.sign_in_button_clicked()
                            MDButtonText:
                                text: "Sign in"
                                theme_text_color: "Custom"
                                text_color: "white"
                                pos_hint: {"center_x": .5, "center_y": .5}
                                bold: True
                        MDButton:
                            style: 'text'
                            MDButtonText:
                                text: 'Fogot password?'
                                adaptive_height: True
                                adaptive_width: True
                                theme_text_color: 'Custom'
                                text_color:  get_color_from_hex("5C5C5C")
                            

                    
               
                
            
        # right box for the app info
        MDBoxLayout:
            md_bg_color: (1,1,1,1)
            orientation: 'vertical'
            padding: "30dp"
            MDBoxLayout:
                size_hint_y: .4
                orientation: 'vertical'
                md_bg_color: get_color_from_hex("32CD32")
                padding: '15dp'
                MDLabel:
                    
                MDLabel:
                    text: 'Welcome to ABMS where business management is made simple and easy'
                    font_style: "Display"
                    role: "small"
                    halign: 'center'
                    theme_text_color: 'Custom'
                    text_color:'white'
                    bold: True
            MDBoxLayout:
                size_hint_y: .6
                orientation: 'vertical'
                md_bg_color: get_color_from_hex("32CD32")
                MDBoxLayout:
                    Image:
                        source: ("Assets\\Images\\image_one .jpeg")
                        fit_mode: 'fill'
                
                    Image:
                        fit_mode: 'fill'
                        source: ("Assets\\Images\\image_two.jpg")
                MDBoxLayout:
                    Image:
                        fit_mode: 'fill'
                        source: ("Assets\\Images\\image_3.jpeg")
            
        

        